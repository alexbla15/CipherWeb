@page "/Search/System"

@using Microsoft.AspNetCore.WebUtilities;

@inject NavigationManager Navigation

<PageTitle>@Title</PageTitle>

<CipherSystemCard Title="@Title" ReadOnly="true" WithCard="false" @ref=sysCard ChangeSystem="ChangeUrl" ChosenSystem="@ChosenSystem"/>

<CipherObjectChangesTable ObjectChanges="@ChosenSystem?.UserActions().Item1" />
@code {
    /// <summary>
    /// Page Title
    /// </summary>
    [Parameter]
    public string Title { get; set; } = "חיפוש מערכת";

    /// <summary>
    /// Chosen object upon searching
    /// </summary>
    [Parameter]
    public StorageSystem? ChosenSystem { get; set; }

    /// <summary>
    /// API response to search.
    /// </summary>
    [Parameter]
    public ErrorResponse Error { get; set; } = ErrorResponse.Success;

    private CipherSystemCard sysCard = new();

    protected override void OnInitialized()
    {
        GetObjectFromUrl();
    }

    /// <summary>
    /// Method to deduce the vessel id from the url.
    /// </summary>
    public void GetObjectFromUrl()
    {
        var uri = Navigation.ToAbsoluteUri(Navigation.Uri);
        if (QueryHelpers.ParseQuery(uri.Query).TryGetValue("Id", out var idValue))
        {
            (ChosenSystem, Error) = StorageSystem.Get(idValue);
        }
    }

    /// <summary>
    /// Changes URL to include the chosen-package id, upon searching it within the page.
    /// </summary>
    public void ChangeUrl()
    {
        ChosenSystem = sysCard.ChosenSystem;
        string newUrl = CipherNavLinks.LocationSearch.Href;
        newUrl = (ChosenSystem is null) ? newUrl : $"{newUrl}?Id={ChosenSystem.Id}";
        Navigation.NavigateTo(newUrl);
    }
}
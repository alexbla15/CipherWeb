@page "/Search/Advanced"

@using Data
@using System.Text

<PageTitle>חיפוש תעודות</PageTitle>

<CipherComponentCard Title="חיפוש תעודות">
    <ChildContent>
        <RadzenRow>
            <RadzenColumn>
                <CipherFormRow Icon="@Icons.Material" Label="חומרים" Style="padding-left:20px">
                    <RadzenDropDown TValue="IEnumerable<string>" Multiple="true" Style="@width" />
                </CipherFormRow>

                <CipherFormRow Icon="@Icons.Vessel" Label="כלים" Style="padding-left:20px">
                    <RadzenDropDown TValue="IEnumerable<string>" Multiple="true" Style="@width" />
                </CipherFormRow>

                <CipherFormRow Icon="@Icons.Unit" Label="יחידות" Style="padding-left:20px">
                    <RadzenDropDown TValue="IEnumerable<string>" Multiple="true" Style="@width" />
                </CipherFormRow>

            </RadzenColumn>
            <RadzenColumn>

                <CipherFormRow Icon="@Icons.Category" Label="קטגוריות" Style="padding-left:20px">
                    <RadzenDropDown TValue="IEnumerable<string>" Multiple="true" Style="@width" />
                </CipherFormRow>

                <CipherFormRow Icon="@Icons.Location" Label="מיקומים" Style="padding-left:20px">
                    <RadzenDropDown TValue="IEnumerable<string>" Multiple="true" Style="@width" />
                </CipherFormRow>

                <CipherFormRow Icon="@Icons.Comment" Label="הערות" Style="padding-left:20px">
                    <RadzenDropDown TValue="IEnumerable<string>" Multiple="true" Style="@width" />
                </CipherFormRow>
            </RadzenColumn>
        </RadzenRow>

        <CipherFormRow Icon="@Icons.Bookmark" Label="תכונות" Style="padding-left:20px">
            <RadzenDropDown TValue="IEnumerable<string>" Multiple="true" Style="width:420px" />
        </CipherFormRow>

        <CipherFormRow Icon="@Icons.Mass" Label="טווח מסות" Style="padding-left:20px">
            <RadzenNumeric TValue="decimal" Style="@width" />
            <RadzenLabel Text="-" Style="font-size:x-large" />
            <RadzenNumeric TValue="decimal" Style="@width" />
        </CipherFormRow>

        <CipherFormRow Icon="@Icons.Calendar" Label="תאריך פתיחה" Style="padding-left:20px">
            <RadzenDatePicker DateFormat="dd/MM/yyyy" TValue="string" Style="@width" />
            <RadzenLabel Text="-" Style="font-size:x-large"/>
            <RadzenDatePicker DateFormat="dd/MM/yyyy" TValue="string" Style="@width" />
        </CipherFormRow>

        <br/>

        <CipherSearchButton Width="50%"/>
    </ChildContent>
</CipherComponentCard>

<br/>


<CipherPackagesTable></CipherPackagesTable>

<CipherSummaryCard Icon="@Icons.Package" Title="כמות תעודות" Value="5"></CipherSummaryCard>
<CipherSummaryCard Icon="@Icons.Mass" Title="מסה כוללת" Value="555"></CipherSummaryCard>


@page "/Search/Package"

@using Microsoft.AspNetCore.WebUtilities;

@inject NavigationManager Navigation

<PageTitle>@Title</PageTitle>

<CipherPackageCard Title="@Title" ReadOnly="true" WithCard="false" @ref="@packCard" ChangePackage="ChangeUrl" ChosenPackage="@ChosenPackage" />

<CipherObjectChangesTable ObjectChanges="@ChosenPackage?.UserActions().Item1" />

@code {
    /// <summary>
    /// Page Title
    /// </summary>
    [Parameter]
    public string Title { get; set; } = "חיפוש תעודה";

    /// <summary>
    /// Chosen package upon searching
    /// </summary>
    [Parameter]
    public Package? ChosenPackage { get; set; }

    /// <summary>
    /// API response to search.
    /// </summary>
    [Parameter]
    public ErrorResponse Error { get; set; } = ErrorResponse.Success;

    private CipherPackageCard packCard = new();

    protected override void OnInitialized()
    {
        GetObjectFromUrl();
    }

    /// <summary>
    /// Method to deduce the vessel id from the url.
    /// </summary>
    public void GetObjectFromUrl()
    {
        var uri = Navigation.ToAbsoluteUri(Navigation.Uri);
        if (QueryHelpers.ParseQuery(uri.Query).TryGetValue("Id", out var idValue))
        {
            (ChosenPackage, Error) = Package.Get(idValue);
        }
    }

    /// <summary>
    /// Changes URL to include the chosen-package id, upon searching it within the page.
    /// </summary>
    public void ChangeUrl()
    {
        ChosenPackage = packCard.ChosenPackage;
        string newUrl = CipherNavLinks.PackageSearch.Href;

        if (ChosenPackage != null)
        {
            newUrl = $"{newUrl}?Id={ChosenPackage.Id}";
        }

        Navigation.NavigateTo(newUrl);
    }
}

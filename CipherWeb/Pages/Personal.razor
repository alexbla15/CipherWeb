@page "/Personal"

<RadzenTabs TabPosition="TabPosition.Top" RenderMode="TabRenderMode.Client" >
    <Tabs>
        <RadzenTabsItem Text="פרטים אישיים">
            <CipherFormCard Width="100%" Variant="Variant.Flat" Class="rz-my-12 rz-mx-auto" Style="float:right" MaxWidth="600px" MarginBottom="0px">
                <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Start" AlignItems="AlignItems.Center" Gap="1rem">
                    <CipherAccountImage Width="100px" Height="100px" BorderRadius="50%"/>
                    <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Start" AlignItems="AlignItems.Start" Gap="1rem">
                        <RadzenStack Gap="@Gap">
                            <CipherText TextStyle="@HeaderStyle" Text="שם מלא" TextAlign="TextAlign.Right"/>
                            <CipherText TextStyle="@ValueStyle" Bold="true">@Constants.SetUser.Name</CipherText>
                            <CipherText TextStyle="@HeaderStyle" Text="תפקיד" TextAlign="TextAlign.Right" />
                            <CipherText TextStyle="@ValueStyle" Bold="true">מזין ראשי</CipherText>
                        </RadzenStack>
                        <RadzenStack Gap="@Gap">
                            <CipherText TextStyle="@HeaderStyle" Text="תאריך הצטרפות ל-Cipher" TextAlign="TextAlign.Right" />
                            <CipherText TextStyle="@ValueStyle" Bold="true">@DateTime.Today.AddYears(-1)</CipherText>
                            <CipherText TextStyle="@HeaderStyle" Text="תאריך חיבור אחרון ל-Cipher" TextAlign="TextAlign.Right"></CipherText>
                            <CipherText TextStyle="@ValueStyle" Bold="true">@DateTime.Now</CipherText>
                        </RadzenStack>
                        <RadzenStack Gap="@Gap">
                            <CipherText TextStyle="@HeaderStyle" Text="תנועות בהזנה" TextAlign="TextAlign.Right" />
                            <CipherText TextStyle="@ValueStyle" Bold="true">
                                <RadzenLink Path="Approval" Text="5" Style="@($"color: {Colors.Primary}")" />
                            </CipherText>
                            <CipherText TextStyle="@HeaderStyle" Text="התראות" TextAlign="TextAlign.Right" />
                            <CipherText TextStyle="@ValueStyle" Bold="true">
                                <RadzenLink Path="Approval" Text="1" Style="@($"color: {Colors.Primary}")" />
                            </CipherText>
                        </RadzenStack>
                    </RadzenStack>
                </RadzenStack>
            </CipherFormCard>
        </RadzenTabsItem>

        <RadzenTabsItem Text="תהליכים שהזנתי">
            <CipherEventsTable Title="תנועות" WithCard="false"/>
        </RadzenTabsItem>

        <RadzenTabsItem Text="תנועות שאישרתי">
            <CipherEventsTable Title="תנועות" WithCard="false" />
        </RadzenTabsItem>

        <RadzenTabsItem Text="התראות">
            <CipherComingSoon/>
        </RadzenTabsItem>
    </Tabs>
</RadzenTabs>

@code {
    TextStyle HeaderStyle = TextStyle.Caption;
    TextStyle ValueStyle = TextStyle.H6;
    string Gap = "1px";
}

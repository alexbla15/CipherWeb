@page "/forms/addvessel"

@inject NotificationService NotificationService
@inject ICipherInfo _db

<PageTitle>כלי חדש</PageTitle>

<CipherSteps>
    <RadzenStepsItem Text="פרטי הזנה">
        <CipherFormInfo Title="וודאו את פרטי ההזנה" />

        <CipherComponentCard Title="פרטי הכלי" ContentDisplay="flex" ContentJustify="flex-start" ContentFlexWrap="wrap">
            @* -- Name -- *@
            <CipherAutoComplete Icon="@Icons.Id" @bind-Value="ves.Name" Label="שם הכלי" />

            @* -- Type -- *@
            <CipherAutoComplete Label="סוג הכלי" Icon="@Icons.Type" />

            @* -- Location -- *@
            <CipherLocation Label="מיקום הכלי" />

            @* -- Material -- *@
            <CipherAutoComplete Label="סוג החומר" Icon="@Icons.Material"/>

            @* -- Category -- *@
            <CipherAutoComplete Label="קטגוריית החומר" Icon="@Icons.Category" />

            @* -- MaxAmount -- *@
            <CipherAmount Label="מגבלת כמות" Icon="@Icons.Mass" />
        </CipherComponentCard>

        <CipherComments Title="כתבו הערות על הכלי" />
    </RadzenStepsItem>

    <RadzenStepsItem Text="סיכום ואישור">
        <CipherSubmit ActionText="כלי בשם A1 נפתח במעבדה B. הכלי יכיל עד 5 גרם מגנזיום מסוג תמיסת מגנזיום."></CipherSubmit>
    </RadzenStepsItem>
</CipherSteps>

@code {
    private Vessel ves = new Vessel();
}
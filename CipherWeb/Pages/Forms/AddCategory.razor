@page "/forms/AddCategory"

@inject NotificationService NotificationService
@inject ICipherInfo _db

<PageTitle>קטגוריה חדשה</PageTitle>

<CipherSteps>
    <RadzenStepsItem Text="פרטי הזנה">
        <CipherFormInfo Title="וודאו את פרטי ההזנה" />

        <CipherComponentCard Title="פרטי הקטגוריה" ContentDisplay="flex" ContentJustify="flex-start" ContentFlexWrap="wrap">
            @* -- Material -- *@
            <CipherAutoComplete Label="סוג החומר" Icon="@Icons.Material" />

            @* -- Main Category -- *@
            <CipherCategoryDropDown Label="שם קטגוריה ראשית" TextProperty="MainCategory" ValueProperty="MainCategory"></CipherCategoryDropDown>

            @* -- Name -- *@
            <CipherAutoComplete Icon="@Icons.Id" Label="שם קטגוריה" />

            @* -- Mask -- *@
            <CipherAutoComplete Label="סדרה (***)" Icon="@Icons.Password" MinLength="1" MaxLength="3" />

            @* -- Default destination -- *@
            <CipherAutoComplete Label="ייעוד" Icon="@Icons.Process" />
        </CipherComponentCard>

        <CipherComments Title="הערות על הקטגוריה" />
    </RadzenStepsItem>

    <RadzenStepsItem Text="סיכום ואישור">
        <CipherSubmit ActionText="נפתחה קטגוריה תמיסה לחומר מגנזיום. קטגוריה זו תקבל את הסדרה 111."></CipherSubmit>
    </RadzenStepsItem>
</CipherSteps>
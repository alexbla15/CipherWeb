@page "/Information"

@inject ICipherInfo _db
@inject ExcelService excelService
@inject IJSRuntime JSRuntime

@code {
    TextStyle HeaderTextStyle = TextStyle.H5;
}

<PageTitle>מסך פתיחה</PageTitle>

<RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Center" AlignItems="AlignItems.Center" Gap="0">
    <CipherText TextStyle="TextStyle.H2" Text="ברוכים הבאים למערכת" TextAlign="TextAlign.Center" Width="" />

    <CipherLogo Height="25vh"></CipherLogo>
</RadzenStack>

<RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Center"
             AlignItems="AlignItems.Center" Style="width:100%">
    @foreach (InfoBox infoBox in infoBoxes)
    {
        <CipherComponentCard Variant="Variant.Outlined" Width="33%">
            <RadzenStack Orientation="Orientation.Vertical" AlignItems="AlignItems.Center" Gap="0.05rem">
                <RadzenRow Style="height: 70px">
                    <CipherText TextStyle="@HeaderTextStyle" Text="@infoBox.Title" />
                </RadzenRow>
                <RadzenRow Style="height: 100px;">
                    <CipherText Wrap="true" TextAlign="TextAlign.Center" TextStyle="TextStyle.H6" Text="@infoBox.Description" />
                </RadzenRow>
                <RadzenRow>
                    <CipherNavButton Icon="@infoBox.ButtonIcon" Size="ButtonSize.Large" Text="@infoBox.ButtonText" />
                </RadzenRow>
            </RadzenStack>
        </CipherComponentCard>
    }
</RadzenStack>

@code {
    class InfoBox
    {
        public string Title { get; set; }
        public string Description { get; set; }
        public string ButtonText { get; set; }
        public string ButtonIcon { get; set; }
    }

    List<InfoBox> infoBoxes = new List<InfoBox>
    {
        new InfoBox {Title="איך משתמשים?", Description="CIPHER שמה לעצמה כמטרה לפשט את התהליכים ככל הניתן, כך שכל אחד יכול ללמוד איך להשתמש בה בקלות!",
        ButtonIcon=Icons.Learn, ButtonText="למדו בקלות כאן"},
        new InfoBox {Title="אפשר לשפר משהו?", Description="אנחנו מאמינים שתמיד יש לאן לשאוף. נשמח לקבל הצעות ייעול, תוספות וביקורת",
        ButtonIcon=Icons.Idea, ButtonText="הציעו רעיונות"},
        new InfoBox {Title="יש לך שאלה?", Description="ריכזנו כמות גדולה של שאלות ותשובות נפוצות. אם יש שאלה שלא נענתה, נשמח לעזור!",
        ButtonIcon=Icons.QA, ButtonText="לעמוד שאלות - תשובות"}
    };
}
@inherits LayoutComponentBase

@inject TooltipService tooltipService

<PageTitle>Cipher</PageTitle>

<RadzenComponents />

@code {

    bool sidebarExpanded = false;

    [Parameter]
    public string Description { get; set; } = "כל הזכויות שמורות לאלכס בלחמן ושחר פייט, היחידה להנדסת תהליך";

    [Parameter]
    public string SubDescription { get; set; } = "Ⓒ CIPHER 2024";

    [Parameter]
    public TextStyle DescriptionStyle { get; set; } = TextStyle.Body2;
}

<CipherLayout>
    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Start" AlignItems="AlignItems.Center" Gap="1rem" dir="rtl" Style="width:100%">
            <RadzenSidebarToggle Style="font-size:large; width:5%" Click="@(() => sidebarExpanded = !sidebarExpanded)" />
            <CipherSiteHeader Header_Width="95%" />
        </RadzenStack>
    </RadzenHeader>
    <RadzenSidebar Responsive="false" @bind-Expanded="@sidebarExpanded">
        <RadzenPanelMenu dir="rtl">

            @foreach (MyNavLink myLink in CipherNavLinks.links)
            {
                <RadzenPanelMenuItem Text="@myLink.Name" Icon="@myLink.Icon" Path="@myLink.Href">
                    @if(myLink.SubLinks.Count > 0)
                    {
                        @foreach (MySubNavLink mySubLink in myLink.SubLinks)
                        {
                            <RadzenPanelMenuItem Text="@mySubLink.Name" Path="@mySubLink.Href" />
                        }
                    }
                </RadzenPanelMenuItem>
            }

            <RadzenStack Style="position:relative;" Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Center">
                <CipherFooter Padding=0 MaxWidth="80%" LogoHeight="5vh" BackgroundColor="@Colors.PrimaryLighter"></CipherFooter>
            </RadzenStack>

        </RadzenPanelMenu>
    </RadzenSidebar>

    <CipherBody Body="@Body"/>
</CipherLayout>
@inherits CipherTableCard

<CipherTableCard Title="@Title" Sharable="@Sharable" IsReport="@IsReport">
    <AdditionalButtons>
        <CipherAddUnitBtn />
    </AdditionalButtons>
    <ComponentContent>
        <CipherDataGrid Cipher_TItem="VesselDTO" DataSource="@ChosenVesselsDTOs" ColumnNames="@(new Vessel().Headers())"
                        GridFilterMode="@FilterMode" AllowFilter="@Filter" AllowGroup="@Group"/>
    </ComponentContent>
</CipherTableCard>

@code {
    /// <summary>
    /// Filter mode of data grid. Must be a FilterMode-enum.
    /// Defaults to SimpleWithMenu.
    /// </summary>
    [Parameter]
    public FilterMode FilterMode { get; set; } = FilterMode.SimpleWithMenu;

    /// <summary>
    /// Allows/disabled filtering.
    /// </summary>
    [Parameter]
    public bool Filter { get; set; } = false;

    /// <summary>
    /// Allows/disables grouping.
    /// </summary>
    [Parameter]
    public bool Group { get; set; } = false;

    /// <summary>
    /// All available category options
    /// </summary>
    [Parameter]
    public IEnumerable<Vessel> ChosenVessels { get; set; } = new List<Vessel>();

    /// <summary>
    /// State of rsponse for data fetching in this component
    /// </summary>
    [Parameter]
    public ErrorResponse Error { get; set; } = ErrorResponse.Success;

    private List<VesselDTO> ChosenVesselsDTOs = new();

    protected override void OnInitialized()
    {
        Title ??= "כלים";
        (ChosenVessels, Error) = CachedData.AllVessels;
        ChosenVesselsDTOs = ChosenVessels.Select(x => x.ToDTO()).ToList();
    }
}
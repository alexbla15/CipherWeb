@inherits CipherTableCard

<CipherTableCard Title="@Title" MaxWidth="@MaxWidth" Width="@Width" DataSource="@Constants.packages" WithCard="@WithCard" WithButtons="@WithButtons"
                 FileTitle="@FileTitle" ExcelExport=@ExcelExport PDFExport=@PDFExport ExpandPath="@ExpandPath" Height="@Height" MarginBottom="@MarginBottom">

    <HeaderContent>
        @if (WithHeaderContent)
        {
            <RadzenStack AlignItems="AlignItems.Start" JustifyContent="JustifyContent.Stretch">
                <CipherAutoComplete Label="בחירת מיקום / תחום / מבנה"></CipherAutoComplete>
            </RadzenStack>
        }
    </HeaderContent>
    <ComponentContent>
        <CipherDataGrid Cipher_TItem="Package" DataSource="@Constants.packages" RowsPerPage="@RowsPerPage"
                        GridFilterMode="@GridFilterMode" AllowFilter="@AllowFilter" AllowGroup="@AllowGroup"
                        WithTotalFooter="@WithTotalFooter" />
    </ComponentContent>
</CipherTableCard>

@code {
    [Parameter]
    public FilterMode GridFilterMode { get; set; } = FilterMode.SimpleWithMenu;

    [Parameter]
    public bool AllowFilter { get; set; }

    [Parameter]
    public bool AllowGroup { get; set; }

    [Parameter]
    public bool WithTotalFooter { get; set; } = true;

    [Parameter]
    public bool WithHeaderContent { get; set; } = true;

    [Parameter]
    public int RowsPerPage { get; set; } = 12;

    protected override async Task OnInitializedAsync()
    {
        Title = (Title is null) ? "דוח תעודות" : Title;
        FileTitle = (FileTitle is null) ? "packages" : FileTitle;
    }
}
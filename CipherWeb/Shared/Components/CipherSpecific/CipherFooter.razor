@inherits CipherComponentCard

<CipherComponentCard Width="@Width" MaxWidth="@MaxWidth" Padding="@Padding" ContentPadding="0"
                     MarginLeft="@MarginLeft" MarginRight="@MarginRight" MarginTop="@MarginTop"
                     BackgroundColor="@BackgroundColor" Variant="Variant.Filled">
    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center"
                 JustifyContent="JustifyContent.Center" Gap="0">

        <CipherLogo LogoPath="@LogoPath" Height="@LogoHeight"></CipherLogo>
        <RadzenStack Orientation="Orientation.Vertical">
            <RadzenText TextStyle="@FooterTextStyle" Style="@($"color: {TextColor}")"
                        Text="@DevelopedByText" TextAlign="TextAlign.Center"/>
            <RadzenText TextStyle="@FooterTextStyle" Style="@($"color: {TextColor}")"
                        Text="@ProgramVersionText" TextAlign="TextAlign.Center"/>
        </RadzenStack>

    </RadzenStack>
</CipherComponentCard>

@code {
    // FOOTER PROPERTIES

    /// <summary>
    /// Credit text for developers.
    /// </summary>
    [Parameter]
    public string DevelopedByText { get; set; } = "פותח על ידי " + Constants.CompanyName;

    /// <summary>
    /// Specified the current version of the program
    /// </summary>
    [Parameter]
    public string ProgramVersionText { get; set; } = "CIPHER 07/2024";

    /// <summary>
    /// Footer text color.
    /// </summary>
    [Parameter]
    public string TextColor { get; set; } = "black";

    /// <summary>
    /// Path to the Logo file.
    /// </summary>
    [Parameter]
    public string LogoPath { get; set; } = "Images/HilatLogo.png";

    /// <summary>
    /// Logo's height. Must be in "vh" units.
    /// </summary>
    [Parameter]
    public string LogoHeight { get; set; } = "8vh";

    /// <summary>
    /// Text style of the footer. Must be a TextStyle-enum.
    /// </summary>
    [Parameter]
    public TextStyle FooterTextStyle { get; set; } = TextStyle.Body2;
}
@inherits CipherComponentCard

<CipherComponentCard Width="@Width" MaxWidth="@MaxWidth" Padding="@Padding" 
    MarginLeft="@MarginLeft" MarginRight="@MarginRight"
    BackgroundColor="@BackgroundColor" Variant="Variant.Filled">
    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" 
    JustifyContent="JustifyContent.Center" Gap="0">

        <CipherLogo LogoPath="Images/HilatLogo.png" Height="@LogoHeight"></CipherLogo>
        <RadzenStack Orientation="Orientation.Vertical">
            <CipherText TextStyle="@DescriptionStyle" Style="@($"color: {TextColor}")" 
            Text="@Description" Wrap="@Wrap" TextAlign="TextAlign.Center"></CipherText>
            <CipherText TextStyle="@DescriptionStyle" Style="@($"color: {TextColor}")" 
            Text="@SubDescription" Wrap="@Wrap" TextAlign="TextAlign.Center"></CipherText>
        </RadzenStack>

    </RadzenStack>
</CipherComponentCard>

@code {
        // FOOTER PROPERTIES

    [Parameter]
    public string Description { get; set; } = "פותח על ידי " + Constants.CompanyName;

    [Parameter]
    public string SubDescription { get; set; } = "CIPHER 07/2024";

    [Parameter]
    public TextStyle DescriptionStyle { get; set; } = TextStyle.Body2;

    [Parameter]
    public bool Wrap { get; set; } = true;

    [Parameter]
    public string TextColor { get; set; } = "black";

    [Parameter]
    public string LogoHeight { get; set; } = "8vh";
}
<CipherFormCard style="@FooterStyle()" BackgroundColor="@Colors.PrimaryLight">
    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center">
    <RadzenStack Orientation="Orientation.Vertical">
    <CipherText TextStyle="@DescriptionStyle" Style="@($"color: {TextColor}")" Text="@Description" Wrap="@Wrap" TextAlign="TextAlign.Center"></CipherText>
    <CipherText TextStyle="@DescriptionStyle" Style="@($"color: {TextColor}")" Text="@Description2" Wrap="@Wrap" TextAlign="TextAlign.Center"></CipherText>
    <CipherText TextStyle="@DescriptionStyle" Style="@($"color: {TextColor}")" Text="@SubDescription" Wrap="@Wrap" TextAlign="TextAlign.Center"></CipherText>
    </RadzenStack>

        <CipherLogo LogoPath="Images/HilatLogo.png" Height="12vh"></CipherLogo>
    </RadzenStack>
</CipherFormCard>

@code {
    // FOOTER STYLE 

    [Parameter]
    public string Bottom { get; set; } = "0";

    [Parameter]
    public string Position { get; set; } = "absolute";

    [Parameter]
    public string Width { get; set; } = "100%";

    // FOOTER PROPERTIES

    [Parameter]
    public string Description { get; set; } = "פותח על ידי " + Constants.DeveloperNames;

    [Parameter]
    public string Description2 { get; set; } = Constants.CompanyName;

    [Parameter]
    public string SubDescription { get; set; } = "CIPHER 2024 ©";

    [Parameter]
    public string TextColor { get; set; } = Colors.SecondaryLight;

    [Parameter]
    public TextStyle DescriptionStyle { get; set; } = TextStyle.Body2;

    [Parameter]
    public bool Wrap { get; set; } = false;

    public string FooterStyle()
    {
        return $@"
            bottom: {Bottom};
            position: {Position};
            width: {Width};
            width:100%;
            background-color: gray;
            margin: 0
        ";
        
    }
}
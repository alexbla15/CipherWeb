@inherits RadzenDropDown<string>

@code {
    /// <summary>
    /// Chosen method
    /// </summary>
    [Parameter]
    public string? ChosenAttribute { get; set; }

    /// <summary>
    /// All available aggregation fields
    /// </summary>
    [Parameter]
    public List<CipherField> AggregationFields { get; set; } = CommonFuncs.GetAllCipherFields();

    protected override void OnInitialized()
    {
        Placeholder ??= IAggregateItem.Translate(nameof(IAggregateItem.Attribute));
    }
}

<RadzenDropDown @bind-Value="@ChosenAttribute" Data=@AggregationFields TextProperty="Translation" ValueProperty="Path" 
Visible="@Visible" Placeholder="@Placeholder" AllowClear="true" AllowFiltering="true" Style="width: 100%" Change="@Change"/>
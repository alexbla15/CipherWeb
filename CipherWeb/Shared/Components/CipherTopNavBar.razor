@inherits RadzenStack

<RadzenStack Orientation="Orientation.Horizontal" Gap="1rem" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center"
             class="@Constants.Styles.TopNavBar">
    @foreach (CipherNavLink item in items)
    {
        @if (CommonFuncs.CanView(item))
        {
        <CipherNavButton Icon="@item.Icon" Text="@item.Name" Width="@ButtonWidth()" Path="@item.Href"
                         ColorShade="@Shade.Darker" ColorStyle="@ButtonStyle.Primary" />
        }
    }
</RadzenStack>

@code {
    /// <summary>
    /// Buttons' content.
    /// </summary>
    [Parameter]
    public List<CipherNavLink> items { get; set; } = new() { CipherNavLinks.Reports, CipherNavLinks.AdvancedSearch };

    /// <summary>
    /// Width of each button.
    /// </summary>
    public string ButtonWidth() => $"{(100 / items.Count)}%";
}
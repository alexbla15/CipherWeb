@inherits RadzenImage

@code {
    [Parameter]
    public string LogoPath { get; set; } = "Images/CIPHER_Logo_4.png";

    [Parameter]
    public string Height { get; set; } = "13vh";

    [Parameter]
    public string Width { get; set; }
    [Parameter]
    public string BorderRadius { get; set; } = "0px";

    public string LogoStyle()
    {
        return $@"
                display: flex;
                justify-content: center;
                align-items: center;
                height: {Height};
                width: {Width};
                border-radius: {BorderRadius}";
    }
}

<RadzenImage Path="@LogoPath" Style="@LogoStyle()"></RadzenImage>
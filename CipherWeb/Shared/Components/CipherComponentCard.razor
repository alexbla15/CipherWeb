@using Radzen
@using CipherWeb.Data

@inherits CipherFormCard

<CipherFormCard MaxWidth="@MaxWidth" Width="@Width" Variant="@Variant" WithCard="@WithCard" Height="@Height" Visible="@Visible">
    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center">
        <CipherText Text="@Title" TextAlign="@Align" TextStyle="TextStyle.H5" Width="" Style="width:fit-content"/>
        <div style="@($"width:100%;padding-right:{HeaderContentPaddingRight}")">
        @HeaderContent
        </div>
        @if (WithButtons)
        {
            @Buttons
        }
    </RadzenStack>
    <div style="@($"padding: {ContentPadding}")">
    @ChildContent
    </div>
</CipherFormCard>

@code{
    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public RenderFragment Buttons { get; set; }

    [Parameter]
    public RenderFragment HeaderContent { get; set; }

    [Parameter]
    public bool WithButtons { get; set; } = true;

    [Parameter]
    public string ContentPadding { get; set; } = "5px 0";

    [Parameter]
    public string HeaderContentPaddingRight { get; set; } = "50px";

    [Parameter]
    public TextAlign Align { get; set; } = TextAlign.Right;
}
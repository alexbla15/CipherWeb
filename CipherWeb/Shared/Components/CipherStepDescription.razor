@inherits CipherText

@code {
    protected override void OnInitialized()
    {
        TextStyle = TextStyle.H5;
        TagName = TagName.H3;
        PaddingBottom ??= "10px";
    }
}

<CipherText TextStyle="@TextStyle" TagName="@TagName" Text="@Text" PaddingBottom="@PaddingBottom"
            TextAlign="@TextAlign" />
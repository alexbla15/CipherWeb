@inherits CipherText

@code {
    /// <summary>
    /// Space between content and margin of component (BOTTOM)
    /// </summary>
    [Parameter]
    public string PaddingBottom { get; set; } = "10px";

    protected override async Task OnInitializedAsync()
    {
        TextStyle = TextStyle.H5;
        TagName = TagName.H3;
    }
}

<CipherText TextStyle="@TextStyle" TagName="@TagName" Text="@Text" Style="@($"padding-bottom: {PaddingBottom}")"
            TextAlign="@TextAlign" />
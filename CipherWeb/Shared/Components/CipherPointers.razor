@inherits CipherComponentCard

@code {
    /// <summary>
    /// Maximal amount of buttons per row.
    /// </summary>
    [Parameter]
    public int AmountPerRow { get; set; } = 4;

    /// <summary>
    /// Name of button-type.
    /// </summary>
    [Parameter]
    public string NavLinkType { get; set; } = "הזנה";

    /// <summary>
    /// Set button's width.
    /// </summary>
    /// <returns></returns>
    public string ButtonWidth() => $"{99M / AmountPerRow}%";

    /// <summary>
    /// Set card width.
    /// </summary>
    public string CardWidth() => "100%";
}

<CipherComponentCard Title=@Title Width="@CardWidth()">
    @foreach (CipherNavLink myNavLink in CipherNavLinks.links)
    {
        if (myNavLink.Name == NavLinkType && myNavLink.SubLinks != null)
        {
            @foreach (CipherNavLink mySubNavLink in myNavLink.SubLinks)
            {
                @if (mySubNavLink.Name != null)
                {
                    <CipherNavButton ButtonTextAlign="right" Width="@ButtonWidth()" Icon="@mySubNavLink.Icon" Size="ButtonSize.Large"
                    Text="@mySubNavLink.Name" Path="@mySubNavLink.Href" MarginBottom="5px" />
                }
            }
        }
    }
</CipherComponentCard>
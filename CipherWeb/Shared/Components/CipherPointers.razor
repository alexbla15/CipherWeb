@inherits CipherComponentCard

@code {
    [Parameter]
    public List<CipherNavLink> SelectedLinks { get; set; } = new();

    /// <summary>
    /// Maximal amount of buttons per row.
    /// </summary>
    [Parameter]
    public int AmountPerRow { get; set; } = 4;

    /// <summary>
    /// Set button's width.
    /// </summary>
    /// <returns></returns>
    public string ButtonWidth() => $"{99M / AmountPerRow}%";
}

<CipherComponentCard Title=@Title Width="100%">
    @foreach (CipherNavLink subLink in SelectedLinks)
    {
        @if (subLink.Name != null && CommonFuncs.CanView(subLink))
        {
            <CipherNavButton Width="@ButtonWidth()" Icon="@subLink.Icon" Size="ButtonSize.Large"
                             Text="@subLink.Name" Path="@subLink.Href" />
        }
    }
</CipherComponentCard>
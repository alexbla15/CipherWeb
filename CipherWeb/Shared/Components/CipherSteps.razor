@inherits RadzenSteps

@code {
    /// <summary>
    /// Content of steps.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// Width of steps-block.
    /// </summary>
    [Parameter]
    public string Width { get; set; } = "100%";

    /// <summary>
    /// Maximal width of steps-block.
    /// </summary>
    [Parameter]
    public string MaxWidth { get; set; } = "100%";

    protected override void OnInitialized()
    {
        PreviousText = "שלב קודם";
        NextText = "שלב הבא";
        Style = $"width:{Width}; max-width: {MaxWidth}; ";
    }
}

<RadzenSteps PreviousText="@PreviousText" NextText="@NextText" Style="@Style">
    <Steps>
        @ChildContent
    </Steps>
</RadzenSteps>
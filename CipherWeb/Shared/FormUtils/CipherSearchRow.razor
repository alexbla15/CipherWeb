@inject NavigationManager navigationManager

@code {
    [Parameter]
    public string? LabelText { get; set; }

    [Parameter]
    public string? PlaceHolderText { get; set; }

    [Parameter]
    public bool Disabled { get; set; }

    [Parameter]
    public string Width { get; set; } = "300px";

    protected override async Task OnInitializedAsync()
    {
        LabelText = (LabelText is null)? "חיפוש תעודה" : LabelText;
        PlaceHolderText = (PlaceHolderText is null) ? "מספר תעודה" : PlaceHolderText;
    }

    private void SearchFunc(KeyboardEventArgs args)
    {
        if (args.Key == "Enter")
        {
            navigationManager.NavigateTo("/Search/FreeSearch");
        }
    }
}

<CipherFormRow Icon="@Icons.Search" Width="@Width" HeaderMaxWidth="" HeaderWidth="">
    <RadzenAutoComplete Placeholder="@PlaceHolderText" Style="@($"border-top-left-radius:0; border-bottom-left-radius:0; width:100%")" onkeydown="@SearchFunc"
                        Data="@Constants.packages" TextProperty="SerialNumber"></RadzenAutoComplete>
</CipherFormRow>

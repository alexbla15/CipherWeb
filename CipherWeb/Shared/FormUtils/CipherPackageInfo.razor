@inherits CipherComponentCard

@code {
    /// <summary>
    /// Set Packge-object value.
    /// </summary>
    [Parameter]
    public Package pack { get; set; } = new Package();

    /// <summary>
    /// Are fields not editable?
    /// </summary>
    [Parameter]
    public bool ReadOnly { get; set; } = false;

    /// <summary>
    /// Is package info used for a new package or an existing one?
    /// </summary>
    [Parameter]
    public bool IsNew { get; set; } = false;
}

<CipherComponentCard Title="@Title" ContentDisplay="flex" ContentJustify="flex-start" ContentFlexWrap="wrap" WithCard="@WithCard">
    <CipherPackageId Disabled="@ReadOnly"/>
    <CipherMaterialType Disabled="@ReadOnly" />
    <CipherCategoryDropDown Disabled="@ReadOnly" />
    <CipherVesselDropDown Disabled="@ReadOnly" />
    <CipherLocation Disabled="@ReadOnly" />
    @if (!IsNew)
    {
        <CipherNumeric Disabled="@ReadOnly" Label="מסה ברוטו" Icon="@Icons.Professions.Construction.Scale" />
        <CipherNumeric Disabled="@ReadOnly" Label="מסה נטו" Icon="@Icons.Professions.Construction.Scale" />
    }
</CipherComponentCard>
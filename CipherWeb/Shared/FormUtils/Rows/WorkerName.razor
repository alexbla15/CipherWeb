@using Data
@using Microsoft.AspNetCore.Components.Forms

<CipherFormRow Label="@LabelText" Icon="@Icons.Account">
    <RadzenAutoComplete Name="NameChoosing" @bind-Value="Worker" Placeholder="בחירת שם" Data="@TestedData.Workers"
                        Style="@Constants.textStyle" Disabled="@Disabled" />
</CipherFormRow>

@code {
    [Parameter]
    public string? Worker { get; set; }

    [Parameter]
    public string? LabelText { get; set; }

    [Parameter]
    public bool Disabled { get; set; }

    string value = "";

    protected override async Task OnInitializedAsync()
    {
        LabelText = "ממלא הטופס";
    }
}
@inherits CipherFormRow

@code {
    private List<Category> subCategories = new() {new Category(){Name="A"}};

    protected override void OnInitialized()
    {
        Width ??= "300px";
        Label ??= "שם קטגוריה";
        Icon ??= Icons.Symbols.Category;
    }
}

<CipherFormRow Icon="@Icon" Width="@Width">
    <RadzenDropDown Placeholder="@Label" Data="@subCategories" Multiple="false" TextProperty="Name" ValueProperty="Name" 
        AllowClear="true" TValue="string" Style="@($"width: {Width}")">
        <Template>
            @Label: @((context as Category).Name)
        </Template>
    </RadzenDropDown>
</CipherFormRow>
@inherits CipherFormRow

<CipherFormRow Icon="@Icon">
    <RadzenDropDown Placeholder="@Label" TValue="string" AllowFiltering="true" Disabled="@Disabled"
                            Style="width:300px" Data=@Globals.MaterialTypes>
    </RadzenDropDown>
</CipherFormRow>

@code {
    /// <summary>
    /// Is component disabled?
    /// </summary>
    [Parameter]
    public bool Disabled { get; set; } = false;

    protected override async Task OnInitializedAsync()
    {
        Label ??= "סוג החומר";
        Icon ??= Icons.Cipher.Material;
    }
}
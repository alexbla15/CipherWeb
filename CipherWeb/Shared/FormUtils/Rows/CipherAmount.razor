@inherits CipherNumeric

<CipherNumeric Icon="@Icon" Label="@Label" Amount="@Amount" Disabled="@Disabled" 
    AmountChanged="@(args => {Amount=args; AmountChanged.InvokeAsync();})"/>

@code {
    protected override void OnInitialized()
    {
        Label ??= "מסה [גר']";
        Icon ??= Icons.Professions.Construction.scale;
    }

    public decimal GetAmount() => Amount;
}
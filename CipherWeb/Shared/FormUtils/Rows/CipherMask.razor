@inherits CipherAutoComplete

<CipherAutoComplete Label="@Label" Icon="@Icon" MinLength="1" MaxLength="3" @ref=Mask/>

@code {
    private CipherAutoComplete Mask = new();

    protected override void OnInitialized()
    {
        Label ??= "סדרה";
        Icon ??= Icons.Security.Password;
    }

    public string GetValue()
    {
        if (Mask.Check())
        {
            return Mask.Value;
        }
        else
        {
            return "";
        }
    }
}
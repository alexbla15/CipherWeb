@inherits CipherMaskList

<CipherMaskList @ref=Masks AllowedRegex="^[0-9]+$" Icon="@Icon" PlaceHolder="@PlaceHolder" 
SelectedTexts="@SelectedTexts" ValueChanged="@ValueChanged"/>

@code {
    private CipherMaskList Masks = new();

    protected override void OnInitialized()
    {
        PlaceHolder = ICategory.Translate(nameof(ICategory.IdMask));
        Icon = Icons.Security.password;
    }

    /// <summary>
    /// Get the value set within the mask. Resets the value if it doesn't fullfill the check function.
    /// </summary>
    public List<string>? GetValue() => Masks.SelectedTexts?.ToList();
}
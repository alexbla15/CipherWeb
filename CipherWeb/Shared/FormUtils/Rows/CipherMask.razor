@inherits CipherAutoComplete

<CipherMaskList @ref=Masks AllowedRegex="^[0-9]+$" Icon="@Icon" PlaceHolder="@Label"/>

@code {
    private CipherMaskList Masks = new();

    protected override void OnInitialized()
    {
        Label ??= new Category().Translate(nameof(Category.IdMask));
        Icon ??= Icons.Security.Password;
    }

    /// <summary>
    /// Get the value set within the mask. Resets the value if it doesn't fullfill the check function.
    /// </summary>
    /// <returns></returns>
    public List<string> GetValue()
    {
        return Masks.SelectedTexts.ToList();
    }
}
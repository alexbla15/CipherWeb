@inherits CipherAutoComplete

@code {
    /// <summary>
    /// Value of the component.
    /// </summary>
    private string PackId = string.Empty;

    private CipherAutoComplete component = new CipherAutoComplete();

    protected override void OnInitialized()
    {
        Label ??= "מספר תעודה";
        Icon ??= "tag";
    }

    /// <summary>
    /// Make sure user gets value only if he passes the check.
    /// </summary>
    public string GetValue()
    {
        if (component.Check())
        {
            return PackId;
        }
        else
        {
            return "";
        }
    }
}

<CipherAutoComplete @ref=component Disabled="@Disabled" Width="@Width" Label="@Label" Icon="@Icon" Style="@Constants.textStyle" @bind-Value=@PackId />
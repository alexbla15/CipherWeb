@inherits CipherFormRow

@code {
    /// <summary>
    /// Is component readonly?
    /// </summary>
    [Parameter]
    public bool Disabled { get; set; } = false;

    /// <summary>
    /// Max amount of labels that will be shown upon choosing. Afterwards, it will be shown as "X labels were selected"
    /// </summary>
    [Parameter]
    public int MaxShownLabels { get; set; } = int.MaxValue;

    /// <summary>
    /// All packages available
    /// </summary>
    [Parameter]
    public List<IPackage> packs { get; set; } = new();

    /// <summary>
    /// Error response for fetching data
    /// </summary>
    [Parameter]
    public ErrorResponse error { get; set; } = ErrorResponse.Success;

    /// <summary>
    /// All packages chosen
    /// </summary>
    [Parameter]
    public List<IPackage> SelectedPackages { get; set; } = new();

    /// <summary>
    /// Change event
    /// </summary>
    [Parameter]
    public EventCallback<object> Change { get; set; }

    protected override void OnInitialized()
    {
        Label ??= "תעודות";
        Icon ??= Icons.Cipher.Package;
        MinWidth ??= "300px";
        Width ??= "300px";

        (packs, error) = CachedData.AllPackages;
    }
}

<CipherFormRow Icon="@Icon" Width="@Width" MinWidth="@MinWidth">
    <RadzenDropDownDataGrid Placeholder="@Label" SearchTextPlaceholder="חיפוש..." TValue="List<IPackage>" @bind-Value="SelectedPackages"
                            Data=@packs TextProperty="@(nameof(Package.Id))" SelectedItemsText="אפשרויות נבחרו"
                            AllowFiltering="true" MaxSelectedLabels="@MaxShownLabels" Multiple="true" Change="@Change"
                            Chips=true Style="@($"min-width: {MinWidth};")" AllowClear="true" Disabled="@Disabled" AllowSorting=false>
        <Columns>
            <RadzenDropDownDataGridColumn Property="@(nameof(IPackage.Id))" Title="@(new Package().Translate(nameof(Package.Id)))" />
            <RadzenDropDownDataGridColumn Property="@(nameof(IPackage.Category))" Title="@(new Package().Translate(nameof(Package.Category)))">
                <Template>
                   @((context as IPackage).Category.Name)
                </Template>
            </RadzenDropDownDataGridColumn>
            <RadzenDropDownDataGridColumn Property="@(nameof(IPackage.System))" Title="@(new Package().Translate(nameof(Package.System)))">
                <Template>
                    @((context as IPackage).System.Name)
                </Template>
            </RadzenDropDownDataGridColumn>
        </Columns>
    </RadzenDropDownDataGrid>
</CipherFormRow>
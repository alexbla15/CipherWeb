@inherits RadzenStack

<RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Start" AlignItems="AlignItems.Center" Gap="5px">
    @if (WithIcon)
    {
        <RadzenIcon Icon="@Icon" IconColor="@Colors.PrimaryDark" Style="font-size: xx-large;" />
    }
    <RadzenDropDownDataGrid @bind-Value=@ChosenSystem Data=@AvailableSystems TextProperty="@(nameof(CachedData.SystemExample.Name))"
                            Placeholder="@Label" SearchTextPlaceholder="חיפוש..." AllowClear="true" AllowSorting=false
                            AllowColumnResize="true" AllowFilteringByAllStringColumns="true" Style="@($"width: {Width}")" Disabled="@Disabled" Change="@Change">
        <Columns>
            <RadzenDropDownDataGridColumn Property="@(nameof(CachedData.SystemExample.Name))" Title="@(StorageSystem.Translate(nameof(CachedData.SystemExample.Name)))" />
            <RadzenDropDownDataGridColumn Property="@(nameof(CachedData.SystemExample.Description))" Title="@(StorageSystem.Translate(nameof(CachedData.SystemExample.Description)))" />
            <RadzenDropDownDataGridColumn Property="@(nameof(CachedData.SystemExample.Parent))" Title="@(StorageSystem.Translate(nameof(CachedData.SystemExample.Parent)))">
                <Template>
                    @((context as StorageSystem).Parent?.Name)
                </Template>
            </RadzenDropDownDataGridColumn>
            <RadzenDropDownDataGridColumn Property="@(nameof(CachedData.SystemExample.Unit))" Title="@(StorageSystem.Translate(nameof(CachedData.SystemExample.Unit)))">
                <Template>
                    @((context as StorageSystem).Unit?.Description)
                </Template>
            </RadzenDropDownDataGridColumn>
        </Columns>
        <ValueTemplate>
            <b>מערכת:</b> @(context.Name)
        </ValueTemplate>
    </RadzenDropDownDataGrid>
</RadzenStack>

@code {
    /// <summary>
    /// Value of the component.
    /// </summary>
    [Parameter]
    public StorageSystem? ChosenSystem { get; set; }

    /// <summary>
    /// All available systems to choose from.
    /// </summary>
    [Parameter]
    public List<StorageSystem> AvailableSystems { get; set; } = new List<StorageSystem>();

    /// <summary>
    /// Label and placeholder of component.
    /// </summary>
    [Parameter]
    public string? Label { get; set; }

    /// <summary>
    /// Icon aside the component.
    /// </summary>
    [Parameter]
    public string? Icon { get; set; }

    /// <summary>
    /// Component's width.
    /// </summary>
    [Parameter]
    public string Width { get; set; } = "300px";

    /// <summary>
    /// Is dropdown disabled.
    /// </summary>
    [Parameter]
    public bool Disabled { get; set; } = false;

    /// <summary>
    /// Is icon visible?
    /// </summary>
    [Parameter]
    public bool WithIcon { get; set; } = true;

    /// <summary>
    /// Function which takes place as value is changed
    /// </summary>
    [Parameter]
    public EventCallback<object> Change { get; set; }

    /// <summary>
    /// Response from API to data fetching
    /// </summary>
    [Parameter]
    public ErrorResponse Error { get; set; } = ErrorResponse.Success;

    protected override void OnInitialized()
    {
        Label ??= "מערכת";
        Icon ??= Icons.Cipher.Location;

        (AvailableSystems, Error) = CachedData.AllSystems;
    }
}
@using System.Text.RegularExpressions;

@inherits CipherDatePicker

@code {
    /// <summary>
    /// Minimal hour to choose.
    /// </summary>
    [Parameter]
    public DateTime MinTime { get; set; } = Convert.ToDateTime("00:00");

    /// <summary>
    /// Maximal hour to choose.
    /// </summary>
    [Parameter]
    public DateTime MaxTime { get; set; } = Convert.ToDateTime("23:59");
}

<CipherDatePicker Icon="@Icons.Time" Label="שעה" ShowTime="true" DateFormat="HH:mm" Min="@MinTime" Max="@MaxTime" TimeOnly="true" ShowTimeOkButton="true"
                  Width="@Width" Disabled="@Disabled" Popup="@Popup" Value="@DateTime.Now"></CipherDatePicker>
@using System.Text.RegularExpressions;

@inherits CipherDatePicker

@code {
    /// <summary>
    /// Minimal hour to choose.
    /// </summary>
    [Parameter]
    public DateTime MinTime { get; set; } = Convert.ToDateTime("00:00");

    /// <summary>
    /// Maximal hour to choose.
    /// </summary>
    [Parameter]
    public DateTime MaxTime { get; set; } = Convert.ToDateTime("23:59");

    protected override void OnInitialized()
    {
        Label ??= "שעה";
        DateFormat ??= "HH:mm";
        Icon ??= Icons.Time.Clock.Schedule;
    }
}

<CipherDatePicker Icon="@Icon" Label="@Label" ShowTime="true" DateFormat="@DateFormat" Min="@MinTime" Max="@MaxTime" TimeOnly="true" ShowTimeOkButton="true"
                  Width="@Width" Disabled="@Disabled" Popup="@Popup" Value="@DateTime.Now"/>
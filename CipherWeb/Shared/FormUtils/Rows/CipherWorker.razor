@inherits CipherAutoComplete

<CipherAutoComplete Icon="@Icon" Label="@Label" Data="@Data" Disabled="@Disabled" Width="@Width"
                    TextProperty="Name" @ref="SelectedWorker" Value="@Constants.SetUser.Name" AllowedRegex="^[א-ת. \n]+$" />

@code {
    private CipherAutoComplete SelectedWorker = new();

    protected override void OnInitialized()
    {
        Label ??= "מבצע הפעולה";
        Icon ??= Icons.Social.SinglePerson.Person;
        Data ??= Worker.AllWorkers;
    }

    public string GetWorker() => SelectedWorker.Value;
}
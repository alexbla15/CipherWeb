@inherits CipherAutoComplete

<CipherAutoComplete Icon="@Icon" Label="@Label" Data="@Data" Disabled="@Disabled" 
                    ValueChanged="@(args => {ChosenWorker=args; ValueChanged.InvokeAsync();})"
                    TextProperty="Name" @ref="SelectedWorker" Value="@ChosenWorker" AllowedRegex="^[א-ת. \n]+$" />

@code {
    [Parameter]
    public string? ChosenWorker { get; set; } = Constants.SetUser.Name;

    private CipherAutoComplete SelectedWorker = new();

    protected override void OnInitialized()
    {
        Label ??= "מבצע הפעולה";
        Icon ??= Icons.Social.SinglePerson.person;
        Data ??= Config.Worker(false).AllWorkers();
    }
}
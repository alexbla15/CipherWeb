@inherits CipherComponentCard

@code {
    [Parameter]
    public string RowWidth { get; set; } = "400px";

    [Parameter]
    public string EnlargedRowWidth { get; set; } = "875px";

    [Parameter]
    public string EnlargedReducedRowWidth { get; set; } = "784px";

    [Parameter]
    public bool ReadOnly { get; set; } = false;

    public class Analysis
    {
        public int Id { get; set; }
        public string Type { get; set; }
        public decimal Value { get; set; }
        public DateTime EventDate { get; set; }
    }

    List<Analysis> analysis = new();
}

<CipherComponentCard Title="@Title" WithCard="@WithCard">

    <HeaderContent>
        <RadzenStack AlignItems="AlignItems.Start" JustifyContent="JustifyContent.Start">
            <CipherAutoComplete TextProperty="Name" Label="שם המיקום" Data="@Constants.vessels"></CipherAutoComplete>
        </RadzenStack>
    </HeaderContent>
    <ChildContent>
        <RadzenTabs>
            <Tabs>
                <RadzenTabsItem Text="פרטים">
                    @* -- System ID -- *@
                    <CipherAutoComplete Label="מספר סידורי" Icon="@Icons.Id" Width="@RowWidth" Disabled="@ReadOnly" />

                    @* -- SYSTEM NAME -- *@
                    <CipherAutoComplete Label="שם" Icon="@Icons.Location" Width="@RowWidth" Disabled="@ReadOnly" />

                    @* -- SYSTEM DESCRIPTION -- *@
                    <CipherAutoComplete Label="תיאור" Icon="@Icons.Description" Width="@RowWidth"  Disabled="@ReadOnly" />

                    @* -- RESPONSIBLE WORKER -- *@
                    <CipherAutoComplete Label="עובד אחראי" Icon="@Icons.Account" Width="@RowWidth" Disabled="@ReadOnly" />

                    @* -- FATHER SYSTEM NAME -- *@
                    <CipherAutoComplete Label="נמצא במיקום" Icon="@Icons.Location_Initial" Width="@RowWidth" Disabled="@ReadOnly" />

                    @* -- UNIT -- *@
                    <CipherAutoComplete Label="יחידה" Icon="@Icons.Unit" Width="@RowWidth" Disabled="@ReadOnly" />

                    @* -- OPEN DATE -- *@
                    <CipherDatePicker Label="תאריך פתיחה" Disabled="@ReadOnly" Width="@RowWidth" />

                    @* -- EXPIRATION DATE -- *@
                    <CipherDatePicker Label="תאריך תפוגה" Disabled="@ReadOnly" Width="@RowWidth" />

                    @* -- ZERO DATE -- *@
                    <CipherDatePicker Label="תאריך איפוס" Disabled="@ReadOnly" Width="@RowWidth" />

                    @* -- LEFTOVERS -- *@
                    <CipherNumeric Label="שאריות" Icon="@Icons.Date" Width="@RowWidth" Disabled="@ReadOnly" />

                    @* -- RESTRICTIONS -- *@
                    <CipherAutoComplete Label="מגבלות" Icon="@Icons.Restriction" Width="@RowWidth" Disabled="@ReadOnly" />

                    @* -- COMMENTS -- *@
                    <CipherFormRow Label="הערות" Icon="@Icons.Comment" Width="@EnlargedRowWidth">
                        <RadzenTextBox Placeholder="הערות" Style="@($"{Constants.textStyle}; width: {EnlargedReducedRowWidth}")" Disabled="@ReadOnly" />
                    </CipherFormRow>
                </RadzenTabsItem>

                <RadzenTabsItem Text="תעודות">
                    <CipherPackagesTable WithHeaderContent=false Title="" WithCard="false" />
                </RadzenTabsItem>

                <RadzenTabsItem Text="כלים">
                    <CipherPackagesTable WithHeaderContent=false Title="" WithCard="false" />
                </RadzenTabsItem>

                <RadzenTabsItem Text="מערכות">
                    <div style="border-radius: 5px">
                        <CipherPackagesTable WithHeaderContent=false Title="" WithCard="false" />
                    </div>
                </RadzenTabsItem>

                <RadzenTabsItem Text="תחומים">
                    <CipherPackagesTable WithHeaderContent=false Title="" WithCard="false" />
                </RadzenTabsItem>

                <RadzenTabsItem Text="תנועות">
                    <CipherEventsTable Title="" WithCard="false" />
                </RadzenTabsItem>
            </Tabs>
        </RadzenTabs>
    </ChildContent>
</CipherComponentCard>
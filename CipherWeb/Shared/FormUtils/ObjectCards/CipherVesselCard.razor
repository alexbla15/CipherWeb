@inherits CipherComponentCard

<CipherComponentCard Title="פרטי הכלי" ContentDisplay="flex" ContentJustify="flex-start" ContentFlexWrap="wrap">
    <CipherAutoComplete Label="@Vessel.Translate(nameof(CachedData.VesselExample.Name))" Icon="@Icons.Cipher.Vessel" @ref=VesName />
    <CipherAutoComplete Label="@Vessel.Translate(nameof(CachedData.VesselExample.Type))" Icon="@Icons.Symbols.Category" Multiline="true"
                        @ref=VesType />
    <CipherLocation @ref="VesSystem" />
</CipherComponentCard>

@code {
    private CipherAutoComplete VesName = new();
    private CipherAutoComplete VesType = new();
    private CipherLocation VesSystem = new();

    public VesselRequest Value()
    {
        VesselRequest ves = VesselRequest.Empty();

        ves.Name = VesName.Check() ? VesName.Value : string.Empty;
        ves.Type = VesType.Check() ? VesType.Value : string.Empty;
        ves.SystemId = VesSystem.Value?.Id;

        return ves;
    }

    /// <summary>
    /// Outside Value-function, since it can be null within VesselRequest, but you cannot pass the request if there is an error.
    /// </summary>
    /// <returns></returns>
    public Tuple<bool, string> CheckName()
    {
        bool ValidName = VesName.Check();
        return new(ValidName, Vessel.Translate(nameof(CachedData.VesselExample.Name)));
    }
}
@inherits CipherComponentCard

@code {
    [Parameter]
    public string RowWidth { get; set; } = "width: 400px";

    [Parameter]
    public string RowWidth2 { get; set; } = "400px";

    [Parameter]
    public bool ReadOnly { get; set; } = false;

    public class Analysis
    {
        public int Id { get; set; }
        public string Type { get; set; }
        public decimal Value { get; set; }
        public DateTime EventDate { get; set; }
    }

    List<Analysis> analysis = new();
}

<CipherComponentCard Title="@Title" WithCard="@WithCard">
    <RadzenTabs>
        <Tabs>
            <RadzenTabsItem Text="פרטים">
                <RadzenRow>
                <RadzenColumn>
                    @* -- PACKAGE ID -- *@
                    <CipherAutoComplete Label="מספר סידורי" Icon="@Icons.Id" Width="@RowWidth2" Disabled="@ReadOnly" />

                        @* -- VESSEL -- *@
                        <CipherAutoComplete Label="כלי" Icon="@Icons.Vessel" Width="@RowWidth2" Disabled="@ReadOnly" />

                        @* -- PACKAGE BRUT MASS -- *@
                        <CipherFormRow Label="מסה ברוטו" Icon="@Icons.Mass" Style="position:fixed">
                            <RadzenNumeric TValue="decimal" Style="@($"{Constants.textStyle}; {RowWidth}")" Disabled="@ReadOnly" />
                        </CipherFormRow>

                        @* -- PACKAGE DESCRIPTION -- *@
                        <CipherAutoComplete Label="תיאור" Icon="@Icons.Description" Width="@RowWidth2" Disabled="@ReadOnly" />

                        @* -- OPEN DATE -- *@
                        <CipherDatePicker Label="תאריך פתיחה" Disabled="@ReadOnly" Width="@RowWidth2" />

                </RadzenColumn>
                <RadzenColumn>
                        @* -- PACKAGE TYPE -- *@
                        <CipherAutoComplete Label="סוג תעודה" Icon="@Icons.Description" Width="@RowWidth2" Disabled="@ReadOnly" />

                        @* -- LOCATION -- *@
                        <CipherAutoComplete Label="מיקום" Icon="@Icons.Location" Width="@RowWidth2" Disabled="@ReadOnly" />

                        @* -- PACKAGE NET MASS -- *@

                        <CipherFormRow Label="מסה נטו" Icon="@Icons.Mass" Style="position:fixed">
                            <RadzenNumeric TValue="decimal" Style="@($"{Constants.textStyle}; {RowWidth}")" Disabled="@ReadOnly" />
                        </CipherFormRow>

                        @* -- COMMENTS -- *@
                        <CipherFormRow Label="הערות" Icon="@Icons.Comment" Style="position:fixed">
                            <RadzenTextBox Placeholder="הערות" Style="@($"{Constants.textStyle}; {RowWidth}")" Disabled="@ReadOnly" />
                        </CipherFormRow>
                </RadzenColumn>
                </RadzenRow>
        </RadzenTabsItem>

        <RadzenTabsItem Text="תנועות">
                <CipherEventsTable Title="" WithCard="false" />
        </RadzenTabsItem>

        <RadzenTabsItem Text="מדדים">
                <CipherDataGrid Cipher_TItem="Analysis" DataSource="analysis" />
        </RadzenTabsItem>
        </Tabs>
    </RadzenTabs>

</CipherComponentCard>
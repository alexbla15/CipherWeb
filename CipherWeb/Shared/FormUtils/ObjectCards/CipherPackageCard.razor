@inherits CipherComponentCard

@code {
    [Parameter]
    public string RowWidth { get; set; } = "400px";

    [Parameter]
    public string EnlargedRowWidth { get; set; } = "875px";

    [Parameter]
    public string EnlargedReducedRowWidth { get; set; } = "784px";

    [Parameter]
    public bool ReadOnly { get; set; } = false;

    public class Analysis
    {
        public int Id { get; set; }
        public string Type { get; set; }
        public decimal Value { get; set; }
        public DateTime EventDate { get; set; }
    }

    List<Analysis> analysis = new();
}

<CipherComponentCard Title="@Title" WithCard="@WithCard">
    <HeaderContent>
        <RadzenStack AlignItems="AlignItems.Start" JustifyContent="JustifyContent.Start">
            <CipherAutoComplete TextProperty="SerialNumber" Label="מספר תעודה" Data="@Constants.packages"></CipherAutoComplete>
        </RadzenStack>
    </HeaderContent>
    <ChildContent>
        <RadzenTabs>
            <Tabs>
                <RadzenTabsItem Text="פרטים">
                    @* -- PACKAGE ID -- *@
                    <CipherAutoComplete Label="מספר סידורי" Icon="@Icons.Id" Width="@RowWidth" Disabled="@ReadOnly" />

                    @* -- PACKAGE TYPE -- *@
                    <CipherAutoComplete Label="סוג תעודה" Icon="@Icons.Description" Width="@RowWidth" Disabled="@ReadOnly" />

                    @* -- VESSEL -- *@
                    <CipherAutoComplete Label="כלי" Icon="@Icons.Vessel" Width="@RowWidth" Disabled="@ReadOnly" />

                    @* -- LOCATION -- *@
                    <CipherAutoComplete Label="מיקום" Icon="@Icons.Location" Width="@RowWidth" Disabled="@ReadOnly" />

                    @* -- PACKAGE BRUT MASS -- *@
                    <CipherNumeric Label="מסה ברוטו" Icon="@Icons.Mass" Width="@RowWidth" Disabled="@ReadOnly" />

                    @* -- PACKAGE NET MASS -- *@
                    <CipherNumeric Label="מסה נטו" Icon="@Icons.Mass" Width="@RowWidth" Disabled="@ReadOnly" />

                    @* -- PACKAGE DESCRIPTION -- *@
                    <CipherAutoComplete Label="תיאור" Icon="@Icons.Description" Width="@RowWidth" Disabled="@ReadOnly" />

                    @* -- OPEN DATE -- *@
                    <CipherDatePicker Label="תאריך פתיחה" Disabled="@ReadOnly" Width="@RowWidth" />

                    @* -- COMMENTS -- *@
                    <CipherFormRow Label="הערות" Icon="@Icons.Comment" Width="@EnlargedRowWidth">
                        <RadzenTextBox Placeholder="הערות" Style="@($"{Constants.textStyle}; width: {EnlargedReducedRowWidth}")" Disabled="@ReadOnly" />
                    </CipherFormRow>
                </RadzenTabsItem>

                <RadzenTabsItem Text="תנועות">
                    <CipherEventsTable Title="" WithCard="false" />
                </RadzenTabsItem>

                <RadzenTabsItem Text="מדדים">
                    <CipherDataGrid Cipher_TItem="Analysis" DataSource="analysis" />
                </RadzenTabsItem>
            </Tabs>
        </RadzenTabs>
    </ChildContent>
</CipherComponentCard>
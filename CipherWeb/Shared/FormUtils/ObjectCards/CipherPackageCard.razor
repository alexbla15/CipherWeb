@using Data

@inherits CipherComponentCard

@code {
    [Parameter]
    public string RowWidth { get; set; } = "width: 400px";

    public class Analysis
    {
        public int Id { get; set; }
        public string Type { get; set; }
        public decimal Value { get; set; }
        public DateTime EventDate { get; set; }
    }

    List<Analysis> analysis = new();
}

<CipherComponentCard Title="@Title" WithCard="@WithCard">
    <RadzenTabs>
        <Tabs>
            <RadzenTabsItem Text="פרטים">
                <RadzenRow>
                <RadzenColumn>
                    @* -- PACKAGE ID -- *@
                    <CipherFormRow Label="מספר סידורי" Icon="@Icons.Id" Style="position:fixed">
                        <RadzenAutoComplete Placeholder="מספר סידורי" Style="@RowWidth" />
                    </CipherFormRow>

                        @* -- VESSEL -- *@
                        <CipherFormRow Label="כלי" Icon="@Icons.Vessel" Style="position:fixed">
                            <RadzenAutoComplete Placeholder="כלי" Style="@RowWidth" />
                        </CipherFormRow>

                        @* -- PACKAGE BRUT MASS -- *@
                        <CipherFormRow Label="מסה ברוטו" Icon="@Icons.Mass" Style="position:fixed">
                            <RadzenNumeric TValue="decimal" Style="@($"{Constants.textStyle}; {RowWidth}")" />
                        </CipherFormRow>

                        @* -- PACKAGE DESCRIPTION -- *@
                        <CipherFormRow Label="תיאור" Icon="@Icons.Description" Style="position:fixed">
                            <RadzenAutoComplete Placeholder="תיאור" Style="@RowWidth" />
                        </CipherFormRow>

                        @* -- OPEN DATE -- *@
                        <CipherDatePicker Title="תאריך פתיחה" />

                </RadzenColumn>
                <RadzenColumn>
                    @* -- PACKAGE TYPE -- *@
                        <CipherFormRow Label="סוג תעודה" Icon="@Icons.Description" Style="position:fixed">
                            <RadzenAutoComplete Placeholder="סוג תעודה" Style="@RowWidth" />
                    </CipherFormRow>

                        @* -- LOCATION -- *@
                        <CipherFormRow Label="מיקום" Icon="@Icons.Location" Style="position:fixed">
                            <RadzenAutoComplete Placeholder="מיקום" Style="@RowWidth" />
                        </CipherFormRow>

                        @* -- PACKAGE NET MASS -- *@

                        <CipherFormRow Label="מסה נטו" Icon="@Icons.Mass" Style="position:fixed">
                            <RadzenNumeric TValue="decimal" Style="@($"{Constants.textStyle}; {RowWidth}")" />
                        </CipherFormRow>

                        @* -- COMMENTS -- *@
                        <CipherFormRow Label="הערות" Icon="@Icons.Comment" Style="position:fixed">
                            <RadzenTextArea Placeholder="הערות" Style="@($"{Constants.textStyle}; {RowWidth}")" />
                        </CipherFormRow>
                </RadzenColumn>
                </RadzenRow>
        </RadzenTabsItem>

        <RadzenTabsItem Text="תנועות">
                <CipherEventsTable Title="" WithCard="false" />
        </RadzenTabsItem>

        <RadzenTabsItem Text="מדדים">
                <CipherDataGrid Cipher_TItem="Analysis" DataSource="analysis" />
        </RadzenTabsItem>
        </Tabs>
    </RadzenTabs>

</CipherComponentCard>
@inherits CipherComponentCard

@code {
    [Parameter]
    public string RowWidth { get; set; } = "400px";

    [Parameter]
    public bool ReadOnly { get; set; } = false;
}

<CipherComponentCard Title="@Title" WithCard="@WithCard">
    <RadzenTabs>
        <Tabs>
            <RadzenTabsItem Text="פרטים">
                <RadzenRow>
                <RadzenColumn>
                        @* -- Numerator -- *@
                        @*<CipherAutoComplete Label="מספר סידורי" Icon="@Icons.Id" Width="@RowWidth" />*@
                        <CipherFormRow Label="מספר סידורי" Icon="@Icons.Id" Style="position:fixed">
                            <CipherAutoComplete Label="מספר סידורי" Width="@RowWidth" Disabled="@ReadOnly" />
                        </CipherFormRow>

                        @* -- PROCESS -- *@
                        <CipherFormRow Label="תהליך" Icon="@Icons.Process" Style="position:fixed">
                            <CipherAutoComplete Label="תהליך" Width="@RowWidth" Disabled="@ReadOnly" />
                        </CipherFormRow>


                        @* -- UPDATING WORKER -- *@
                        <CipherFormRow Label="עובד מעדכן" Icon="@Icons.Account_Old" Style="position:fixed">
                            <CipherAutoComplete Label="עובד מעדכן" Width="@RowWidth" Disabled="@ReadOnly" />
                        </CipherFormRow>

                        @* -- AUTHORIZING WORKER -- *@
                        <CipherFormRow Label="עובד מאשר" Icon="@Icons.Account_New" Style="position:fixed">
                            <CipherAutoComplete Label="עובד מאשר" Width="@RowWidth" Disabled="@ReadOnly" />
                        </CipherFormRow>

                        @* -- PARAMETERS -- *@
                        <CipherFormRow Label="פרמטרים" Icon="@Icons.Settings" Style="position:fixed">
                            <CipherAutoComplete Label="פרמטרים" Width="@RowWidth" Disabled="@ReadOnly" />
                        </CipherFormRow>

                        @* -- COMMENTS -- *@
                        <CipherFormRow Label="הערות" Icon="@Icons.Comment" Style="position:fixed">
                            <RadzenTextBox Placeholder="הערות" Style="@($"{Constants.textStyle}; {RowWidth}")" Disabled="@ReadOnly" />
                        </CipherFormRow>

                </RadzenColumn>
                <RadzenColumn>
                        @* -- EVENT TYPE -- *@
                        <CipherFormRow Label="סוג תנועה" Icon="@Icons.Type" Style="position:fixed">
                            <CipherAutoComplete Label="סוג תנועה" Width="@RowWidth" Disabled="@ReadOnly" />
                        </CipherFormRow>

                        @* -- EVENT DATE -- *@
                        <CipherDatePicker Label="תאריך תנועה" Disabled="@ReadOnly" />

                        @* -- UPDATING DATE -- *@
                        <CipherDatePicker Label="תאריך עדכון" Disabled="@ReadOnly" />

                        @* -- AUTHORIZING DATE -- *@
                        <CipherDatePicker Label="תאריך אישור" Disabled="@ReadOnly" />

                        @* -- STATUS -- *@
                        <CipherFormRow Label="סטטוס" Icon="@Icons.Status" Style="position:fixed">
                            <CipherAutoComplete Label="סטטוס" Width="@RowWidth" Disabled="@ReadOnly" />
                        </CipherFormRow>
                </RadzenColumn>
                </RadzenRow>
        </RadzenTabsItem>
        </Tabs>
    </RadzenTabs>

</CipherComponentCard>
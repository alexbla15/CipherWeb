@inherits CipherComponentCard

<CipherComponentCard WithCard="false" Title="">
    <CipherComponentCard Title="פרטי התהליך" ContentDisplay="flex" ContentJustify="flex-start" ContentFlexWrap="wrap">
        <CipherAutoComplete Label="@ProcessDefinition.Translate(nameof(CachedData.ProcessDefinitionExample.Name))" Icon="@Icons.Cipher.Process" @ref=ProcName />
        <CipherAutoComplete Label="@ProcessDefinition.Translate(nameof(CachedData.ProcessDefinitionExample.Description))" Icon="@Icons.Communication.Chat.Comment" @ref=ProcDescription />

    </CipherComponentCard>

    <CipherProcessSteps @ref="ProcSteps" />
</CipherComponentCard>

@code {
    private CipherAutoComplete ProcName = new();
    private CipherAutoComplete ProcDescription = new();
    private CipherProcessSteps ProcSteps = new();

    public ProcessDefinitionRequest Value()
    {
        ProcessDefinitionRequest proc = ProcessDefinitionRequest.Empty();

        proc.Name = ProcName.Check() ? ProcName.Value : string.Empty;
        proc.Description = ProcDescription.Check() ? ProcDescription.Value : string.Empty;
        proc.Steps = ProcSteps.ChosenSteps;

        return proc;
    }
}
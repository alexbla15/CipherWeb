@using Data

@inherits CipherComponentCard

@code {
    [Parameter]
    public string RowWidth { get; set; } = "width: 400px";

    public class Analysis
    {
        public int Id { get; set; }
        public string Type { get; set; }
        public decimal Value { get; set; }
        public DateTime EventDate { get; set; }
    }

    List<Analysis> analysis = new();
}

<CipherComponentCard Title="@Title">
    <RadzenTabs>
        <Tabs>
            <RadzenTabsItem Text="פרטים">
                <RadzenRow>
                <RadzenColumn>
                        @* -- ID -- *@
                        <CipherFormRow Label="מספר סידורי" Icon="@Icons.Id" Style="position:fixed">
                            <RadzenAutoComplete Placeholder="מספר סידורי" Style="@RowWidth" />
                        </CipherFormRow>

                        @* -- TYPE -- *@
                        <CipherFormRow Label="סוג תהליך" Icon="@Icons.Category" Style="position:fixed">
                            <RadzenAutoComplete Placeholder="סוג תהליך" Style="@RowWidth" />
                        </CipherFormRow>

                        @* -- IN PROCESSES -- *@
                        <CipherFormRow Label="תהליכים יוצרים" Icon="@Icons.Input" Style="position:fixed">
                            <RadzenAutoComplete Placeholder="תהליכים יוצרים" Style="@RowWidth" />
                        </CipherFormRow>

                        @* -- IN CATEGORIES -- *@
                        <CipherFormRow Label="סוגים נצרכים" Icon="@Icons.Input" Style="position:fixed">
                            <RadzenAutoComplete Placeholder="סוגים נצרכים" Style="@RowWidth" />
                        </CipherFormRow>

                        @* -- UPDATE DATE -- *@
                        <CipherDatePicker Title="תאריך עדכון" />

                        @* -- AUTHORIZING DATE -- *@
                        <CipherDatePicker Title="תאריך אישור" />

                        @* -- RESTRICTIONS -- *@
                        <CipherFormRow Label="מגבלות" Icon="@Icons.Restriction" Style="position:fixed">
                            <RadzenAutoComplete Placeholder="מגבלות איחסון" Style="@RowWidth" />
                        </CipherFormRow>

                </RadzenColumn>
                <RadzenColumn>
                    @* -- Name -- *@
                        <CipherFormRow Label="שם תהליך" Icon="@Icons.QA" Style="position:fixed">
                            <RadzenAutoComplete Placeholder="שם תהליך" Style="@RowWidth" />
                    </CipherFormRow>

                        @* -- LOCATIONS -- *@
                        <CipherFormRow Label="מיקומים" Icon="@Icons.Location" Style="position:fixed">
                            <RadzenAutoComplete Placeholder="מיקום" Style="@RowWidth" />
                        </CipherFormRow>

                        @* -- OUT PROCESSES -- *@
                        <CipherFormRow Label="תהליכים צורכים" Icon="@Icons.Output" Style="position:fixed">
                            <RadzenAutoComplete Placeholder="תהליכים צורכים" Style="@RowWidth" />
                        </CipherFormRow>

                        @* -- OUT CATEGORIES -- *@
                        <CipherFormRow Label="סוגים נוצרים" Icon="@Icons.Output" Style="position:fixed">
                            <RadzenAutoComplete Placeholder="סוגים צורכים" Style="@RowWidth" />
                        </CipherFormRow>

                        @* -- UPDATING WORKER -- *@
                        <CipherFormRow Label="עובד/ת מעדכנ/ת" Icon="@Icons.Account" Style="position:fixed">
                            <RadzenAutoComplete Placeholder="שם עובד/ת" Style="@RowWidth" />
                        </CipherFormRow>
                        
                        @* -- AUTHORIZING WORKER -- *@
                        <CipherFormRow Label="עובד/ת מאשר/ת" Icon="@Icons.Account" Style="position:fixed">
                            <RadzenAutoComplete Placeholder="שם מאשר/ת" Style="@RowWidth" />
                        </CipherFormRow>

                        @* -- EXPIRATION DATE -- *@
                        <CipherDatePicker Title="תאריך תפוגה" />

                        @* -- COMMENTS -- *@
                        <CipherFormRow Label="הערות" Icon="@Icons.Comment" Style="position:fixed">
                            <RadzenTextArea Placeholder="הערות" Style="@($"{Constants.textStyle}; {RowWidth}")" />
                        </CipherFormRow>
                </RadzenColumn>
                </RadzenRow>
        </RadzenTabsItem>

        <RadzenTabsItem Text="תהליכי עבר">
                <CipherEventsTable Title="" WithCard="false" />
        </RadzenTabsItem>

            <RadzenTabsItem Text="תעודות">
                <CipherPackagesTable Title="" WithCard="false" />
            </RadzenTabsItem>
        </Tabs>
    </RadzenTabs>

</CipherComponentCard>
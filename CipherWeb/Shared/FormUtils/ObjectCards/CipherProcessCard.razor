@inherits CipherComponentCard

@code {
    [Parameter]
    public string RowWidth { get; set; } = "width: 400px";

    [Parameter]
    public string RowWidth2 { get; set; } = "400px";

    public class Analysis
    {
        public int Id { get; set; }
        public string Type { get; set; }
        public decimal Value { get; set; }
        public DateTime EventDate { get; set; }
    }

    List<Analysis> analysis = new();
}

<CipherComponentCard Title="@Title">
    <RadzenTabs>
        <Tabs>
            <RadzenTabsItem Text="פרטים">
                <RadzenRow>
                <RadzenColumn>
                        @* -- ID -- *@
                        <CipherAutoComplete Label="מספר סידורי" Icon="@Icons.Id" Width="@RowWidth2" />

                        @* -- TYPE -- *@
                        <CipherAutoComplete Label="סוג תהליך" Icon="@Icons.Category" Width="@RowWidth2" />

                        @* -- IN PROCESSES -- *@
                        <CipherAutoComplete Label="תהליכים יוצרים" Icon="@Icons.Input" Width="@RowWidth2" />

                        @* -- IN CATEGORIES -- *@
                        <CipherAutoComplete Label="סוגים נצרכים" Icon="@Icons.Input" Width="@RowWidth2" />

                        @* -- UPDATE DATE -- *@
                        <CipherDatePicker Label="תאריך עדכון" />

                        @* -- AUTHORIZING DATE -- *@
                        <CipherDatePicker Label="תאריך אישור" />

                        @* -- RESTRICTIONS -- *@
                        <CipherAutoComplete Label="מגבלות" Icon="@Icons.Restriction" Width="@RowWidth2" />

                </RadzenColumn>
                <RadzenColumn>
                        @* -- Name -- *@
                        <CipherAutoComplete Label="שם תהליך" Icon="@Icons.QA" Width="@RowWidth2" />

                        @* -- LOCATIONS -- *@
                        <CipherAutoComplete Label="מיקומים" Icon="@Icons.Location" Width="@RowWidth2" />

                        @* -- OUT PROCESSES -- *@
                        <CipherAutoComplete Label="תהליכים צורכים" Icon="@Icons.Output" Width="@RowWidth2" />

                        @* -- OUT CATEGORIES -- *@
                        <CipherAutoComplete Label="סוגים צורכים" Icon="@Icons.Output" Width="@RowWidth2" />

                        @* -- UPDATING WORKER -- *@
                        <CipherAutoComplete Label="עובד/ת מעדכנ/ת" Icon="@Icons.Account" Width="@RowWidth2" />
                        
                        @* -- AUTHORIZING WORKER -- *@
                        <CipherAutoComplete Label="עובד/ת מאשר/ת" Icon="@Icons.Account" Width="@RowWidth2" />

                        @* -- EXPIRATION DATE -- *@
                        <CipherDatePicker Label="תאריך תפוגה" />

                        @* -- COMMENTS -- *@
                        <CipherFormRow Label="הערות" Icon="@Icons.Comment" Style="position:fixed">
                            <RadzenTextArea Placeholder="הערות" Style="@($"{Constants.textStyle}; {RowWidth}")" />
                        </CipherFormRow>
                </RadzenColumn>
                </RadzenRow>
        </RadzenTabsItem>

        <RadzenTabsItem Text="תהליכי עבר">
                <CipherEventsTable Title="" WithCard="false" />
        </RadzenTabsItem>

            <RadzenTabsItem Text="תעודות">
                <CipherPackagesTable Title="" WithCard="false" />
            </RadzenTabsItem>
        </Tabs>
    </RadzenTabs>

</CipherComponentCard>
@inherits CipherComponentCard

@code {
    /// <summary>
    /// Width of each row within card.
    /// </summary>
    [Parameter]
    public string RowWidth { get; set; } = "300px";

    public class Analysis
    {
        public int Id { get; set; }
        public string Type { get; set; }
        public decimal Value { get; set; }
        public DateTime EventDate { get; set; }
    }

    private List<Analysis> analysis = new();
}

<CipherComponentCard Title="@Title" WithCard="@WithCard" Width="1000px" MaxWidth="1000px">
    <RadzenTabs>
        <Tabs>
            <RadzenTabsItem Text="פרטים">
                @* -- ID -- *@
                <CipherAutoComplete Label="מספר סידורי" Icon="@Icons.Id" Width="@RowWidth" />

                @* -- Name -- *@
                <CipherAutoComplete Label="שם תהליך" Icon="@Icons.QA" Width="@RowWidth" />

                @* -- TYPE -- *@
                <CipherAutoComplete Label="סוג תהליך" Icon="@Icons.Category" Width="@RowWidth" />

                @* -- LOCATIONS -- *@
                <CipherAutoComplete Label="מיקומים" Icon="@Icons.Location" Width="@RowWidth" />

                @* -- IN PROCESSES -- *@
                <CipherAutoComplete Label="תהליכים יוצרים" Icon="@Icons.Input" Width="@RowWidth" />

                @* -- OUT PROCESSES -- *@
                <CipherAutoComplete Label="תהליכים צורכים" Icon="@Icons.Output" Width="@RowWidth" />

                @* -- IN CATEGORIES -- *@
                <CipherAutoComplete Label="סוגים נצרכים" Icon="@Icons.Input" Width="@RowWidth" />

                @* -- OUT CATEGORIES -- *@
                <CipherAutoComplete Label="סוגים צורכים" Icon="@Icons.Output" Width="@RowWidth" />

                @* -- UPDATE DATE -- *@
                <CipherDatePicker Label="תאריך עדכון" />

                @* -- UPDATING WORKER -- *@
                <CipherAutoComplete Label="עובד/ת מעדכנ/ת" Icon="@Icons.Account" Width="@RowWidth" />

                @* -- AUTHORIZING DATE -- *@
                <CipherDatePicker Label="תאריך אישור" />

                @* -- AUTHORIZING WORKER -- *@
                <CipherAutoComplete Label="עובד/ת מאשר/ת" Icon="@Icons.Account" Width="@RowWidth" />

                @* -- RESTRICTIONS -- *@
                <CipherAutoComplete Label="מגבלות" Icon="@Icons.Restriction" Width="@RowWidth" />

                @* -- EXPIRATION DATE -- *@
                <CipherDatePicker Label="תאריך תפוגה" />

                @* -- COMMENTS -- *@
                <CipherAutoComplete Multiline="true" Label="הערות" Icon="@Icons.Comment" Width="@RowWidth"/>

                <br />
                <br />
            </RadzenTabsItem>

            <RadzenTabsItem Text="תהליכי עבר">
                <CipherEventsTable Title="" WithCard="false" />
            </RadzenTabsItem>

            <RadzenTabsItem Text="תעודות">
                <CipherPackagesTable Title="" WithCard="false" />
            </RadzenTabsItem>
        </Tabs>
    </RadzenTabs>

</CipherComponentCard>
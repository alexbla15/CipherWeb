@using Data

@inherits CipherComponentCard

@code {
    [Parameter]
    public string RowWidth { get; set; } = "width: 400px";

    public class Analysis
    {
        public int Id { get; set; }
        public string Type { get; set; }
        public decimal Value { get; set; }
        public DateTime EventDate { get; set; }
    }

    List<Analysis> analysis = new();
}

<CipherComponentCard Title="@Title">
    <RadzenTabs>
        <Tabs>
            <RadzenTabsItem Text="פרטים">
                <RadzenRow>
                <RadzenColumn>
                        @* -- SUB CATEGORY ID -- *@
                        <CipherFormRow Label="מספר סידורי" Icon="@Icons.Id" Style="position:fixed">
                            <RadzenAutoComplete Placeholder="מספר סידורי" Style="@RowWidth" />
                        </CipherFormRow>

                        @* -- MATERIAL TYPE -- *@
                        <CipherFormRow Label="סוג חומר" Icon="@Icons.Material" Style="position:fixed">
                            <RadzenAutoComplete Placeholder="סוג חומר" Style="@RowWidth" />
                        </CipherFormRow>

                        @* -- MASK -- *@
                        <CipherFormRow Label="תבנית" Icon="@Icons.Mask" Style="position:fixed">
                            <RadzenAutoComplete Placeholder="תבנית" Style="@RowWidth" />
                        </CipherFormRow>

                        @* -- IN PROCESSES -- *@
                        <CipherFormRow Label="תהליכים מייצרים" Icon="@Icons.Input" Style="position:fixed">
                            <RadzenAutoComplete Placeholder="תהליכים" Style="@RowWidth" />
                        </CipherFormRow>


                        @* -- PROPERTIES -- *@
                        <CipherFormRow Label="תכונות" Icon="@Icons.Properties" Style="position:fixed">
                            <RadzenAutoComplete Placeholder="תכונות" Style="@RowWidth" />
                        </CipherFormRow>

                </RadzenColumn>
                <RadzenColumn>
                    @* -- NAME -- *@
                        <CipherFormRow Label="שם הסוג" Icon="@Icons.Category" Style="position:fixed">
                            <RadzenAutoComplete Placeholder="שם" Style="@RowWidth" />
                    </CipherFormRow>

                        @* -- MAIN CATEGORY -- *@
                        <CipherFormRow Label="סוג ראשי" Icon="@Icons.Material" Style="position:fixed">
                            <RadzenAutoComplete Placeholder="סוג ראשי" Style="@RowWidth" />
                        </CipherFormRow>

                        @* -- DESCRIPTION -- *@
                        <CipherFormRow Label="תיאור" Icon="@Icons.Description" Style="position:fixed">
                            <RadzenAutoComplete Placeholder="כלי" Style="@RowWidth" />
                        </CipherFormRow>

                        @* -- OUT PROCESSES -- *@
                        <CipherFormRow Label="תהליכים צורכים" Icon="@Icons.Output" Style="position:fixed">
                            <RadzenAutoComplete Placeholder="תהליכים" Style="@RowWidth" />
                        </CipherFormRow>
                </RadzenColumn>
                </RadzenRow>
        </RadzenTabsItem>

            <RadzenTabsItem Text="תעודות">
                <CipherPackagesTable Title="" WithCard="false" />
            </RadzenTabsItem>
        </Tabs>
    </RadzenTabs>

</CipherComponentCard>
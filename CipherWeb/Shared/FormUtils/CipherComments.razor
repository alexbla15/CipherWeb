@inherits CipherComponentCard

@code {
    [Parameter]
    public string? comments { get; set; }

    CipherComponentCard Card;

    public string TextAreaStyle()
    {
        return $@"
            height:{Height};
            width: {Card.Width};
            background-color: white;
            align-content: center;
            max-width: {Card.Width};
            float: {Card.Float};
            border-top-right-radius:0;
            border-bottom-right-radius:0";
    }
}

<CipherComponentCard Title="@Title" @ref=Card Width="@Width" WithCard="@WithCard">

    <RadzenRow>
        <RadzenColumn Size="1">
            <RadzenIcon Icon="@Icons.Comment" IconColor="white"
                        Style="background-color:var(--rz-primary-dark); width:100%; height:100%; border-top-right-radius: 10px; border-bottom-right-radius:10px;"></RadzenIcon>

        </RadzenColumn>
        <RadzenColumn Size="11">

            <RadzenTextArea Placeholder="הערות" Value=@comments
                            Style="@TextAreaStyle()" />

        </RadzenColumn>
    </RadzenRow>

</CipherComponentCard>
@inherits CipherComponentCard

@code {
    [Parameter]
    public string? comments { get; set; }

    CipherComponentCard FormCard;
}

<CipherComponentCard Title="@Title" @ref=FormCard Width="@Width" WithCard="@WithCard">

<RadzenRow>
    <RadzenColumn Size="1">
            <RadzenIcon Icon="@Icons.Comment" IconColor="white" 
            Style="background-color:var(--rz-primary-dark); width:100%; height:100%; border-top-right-radius: 10px; border-bottom-right-radius:10px;"></RadzenIcon>
        
    </RadzenColumn>
        <RadzenColumn Size="11">
        
    <RadzenTextArea Placeholder="הערות" Value=@comments 
                    Style="@($"height:{Height}; width: {FormCard.Width}; background-color: white; align-content: center; max-width: {FormCard.Width}; float: {FormCard.Float}")" />
                    
    </RadzenColumn>
</RadzenRow>

                    </CipherComponentCard>
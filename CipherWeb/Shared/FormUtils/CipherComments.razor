@inherits CipherComponentCard

@code {
    /// <summary>
    /// Value of component.
    /// </summary>
    [Parameter]
    public string? comments { get; set; }

    /// <summary>
    /// Placeholder of the comments' text box.
    /// </summary>
    [Parameter]
    public string? Placeholder { get; set; } = "הערות";

    /// <summary>
    /// Background color of the text box containing the comments.
    /// </summary>
    [Parameter]
    public string TextBoxBackgroundColor { get; set; } = "white";

    /// <summary>
    /// Background color of the icon aside the comments.
    /// </summary>
    [Parameter]
    public string IconBackgroundColor { get; set; } = Colors.PrimaryDark;

    private CipherComponentCard Card;

    /// <summary>
    /// Style of text-box.
    /// </summary>
    /// <returns></returns>
    public string TextAreaStyle()
    {
        return $@"
            height:{Height};
            width: {Card.Width};
            background-color: {TextBoxBackgroundColor};
            align-content: center;
            max-width: {Card.Width};
            float: {Card.Float};
            border-top-left-radius:10px;
            border-bottom-left-radius:10px;
            border-top-right-radius:0;
            border-bottom-right-radius:0";
    }

    protected override void OnInitialized()
    {
        Title ??= "הערות";
    }
}

<CipherComponentCard Title="@Title" @ref=Card Width="@Width" WithCard="@WithCard">
    <RadzenRow>
        <RadzenStack Orientation="Orientation.Horizontal" Gap="0px" Style="width:100%">
            <RadzenIcon Icon="@Icons.Communication.Chat.Comment" IconColor="white"
                        Style="@($@"background-color:{IconBackgroundColor}; width:37px; height:100%; border-top-right-radius: 10px; 
                        border-bottom-right-radius:10px; font-size:x-large")"></RadzenIcon>
            <RadzenTextArea Placeholder="@Placeholder" Value="@comments" Style="@TextAreaStyle()" />
        </RadzenStack>
    </RadzenRow>
</CipherComponentCard>
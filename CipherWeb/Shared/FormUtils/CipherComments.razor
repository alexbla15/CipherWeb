@inherits CipherComponentCard

@code {
    /// <summary>
    /// Value of component.
    /// </summary>
    [Parameter]
    public string Comments { get; set; } = string.Empty;

    /// <summary>
    /// Placeholder of the comments' text box.
    /// </summary>
    [Parameter]
    public string? Placeholder { get; set; } = "הערות";

    /// <summary>
    /// Background color of the text box containing the comments.
    /// </summary>
    [Parameter]
    public string TextBoxBackgroundColor { get; set; } = "white";

    private CipherComponentCard Card;
    private CipherAutoComplete component = new();

    /// <summary>
    /// Style of text-box.
    /// </summary>
    /// <returns></returns>
    public string TextAreaStyle()
    {
        return $@"
            background-color: {TextBoxBackgroundColor};
            align-content: center;
            max-width: {Card.MaxWidth};
            width: {Card.Width};
            float: {Card.Float};";
    }

    protected override void OnInitialized()
    {
        Title ??= "הערות";
    }

    public string Value()
    {
        if (component.Check())
        {
            return Comments;
        }
        else
        {
            return string.Empty;
        }
    }
}

<CipherComponentCard Title="@Title" @ref=Card Width="@Width" WithCard="@WithCard">
    <CipherAutoComplete @ref="component" Width="@Width" ShowErrors="true" Icon="@Icons.Communication.Chat.Comment" Placeholder="@Placeholder"
                        Multiline="true" @bind-Value="Comments" Style="@TextAreaStyle()" />
</CipherComponentCard>
@inherits CipherComponentCard

<CipherComponentCard Title="@Title" ContentDisplay="flex" ContentJustify="flex-start" ContentFlexWrap="wrap">
    <CipherWorker @ref=Worker />
    <CipherDatePicker ShowTime="true" TimeOnly="false" @ref=DatePicker/>
</CipherComponentCard>

@code {
    private CipherWorker Worker = new();
    private CipherDatePicker DatePicker = new();

    protected override void OnInitialized() => Title ??= "פרטי ההזנה";

    public DateTime GetDateTime() => DatePicker.GetDateTime();

    public string? GetWorker() => Worker.GetWorker();
}
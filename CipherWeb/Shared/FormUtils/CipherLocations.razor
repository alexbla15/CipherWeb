@inherits CipherComponentCard

@code {
    /// <summary>
    /// Initial location.
    /// </summary>
    [Parameter]
    public IStorageSystem? InitialLocation { get; set; }

    /// <summary>
    /// Final location.
    /// </summary>
    [Parameter]
    public IStorageSystem? FinalLocation { get; set; }

    /// <summary>
    /// Label of initial location.
    /// </summary>
    [Parameter]
    public string InitialLocationText { get; set; } = "מיקום התחלתי";

    /// <summary>
    /// Label of final location.
    /// </summary>
    [Parameter]
    public string FinalLocationText { get; set; } = "מיקום סופי";

    /// <summary>
    /// Icon of initial location.
    /// </summary>
    [Parameter]
    public string InitialLocationIcon { get; set; } = Icons.Travel.Navigation.my_location;

    /// <summary>
    /// Icon of final location.
    /// </summary>
    [Parameter]
    public string FinalLocationIcon { get; set; } = Icons.Awards.flag;

    protected override void OnInitialized() => Title ??= "ציינו מיקום התחלתי וסופי";
}

<CipherComponentCard Title="@Title" ContentDisplay="flex" ContentJustify="flex-start" ContentFlexWrap="wrap">
    <CipherLocation Label="@InitialLocationText" Icon="@InitialLocationIcon" @bind-ChosenSystem=InitialLocation/>
    <CipherLocation Label="@FinalLocationText" Icon="@FinalLocationIcon" @bind-ChosenSystem=FinalLocation />
</CipherComponentCard>
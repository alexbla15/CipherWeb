@inherits CipherComponentCard

@code {
    /// <summary>
    /// Label of initial location.
    /// </summary>
    [Parameter]
    public string InitialLocationText { get; set; } = "מיקום התחלתי";

    /// <summary>
    /// Label of final location.
    /// </summary>
    [Parameter]
    public string FinalLocationText { get; set; } = "מיקום סופי";

    /// <summary>
    /// Icon of initial location.
    /// </summary>
    [Parameter]
    public string InitialLocationIcon { get; set; } = Icons.Travel.Navigation.MyLocation;

    /// <summary>
    /// Icon of final location.
    /// </summary>
    [Parameter]
    public string FinalLocationIcon { get; set; } = Icons.Awards.Flag;
}

<CipherComponentCard Title="@Title" ContentDisplay="flex" ContentJustify="flex-start" ContentFlexWrap="wrap">
    <CipherLocation Label="@InitialLocationText" Icon="@InitialLocationIcon" />
    <CipherLocation Label="@FinalLocationText" Icon="@FinalLocationIcon" />
</CipherComponentCard>
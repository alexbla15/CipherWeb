@inherits RadzenStack

@code {
    /// <summary>
    /// Background color outside ComingSoon picture.
    /// </summary>
    [Parameter]
    public string BackgroundColor { get; set; } = "#AC6E35";

    /// <summary>
    /// Rounding the card apearance.
    /// </summary>
    [Parameter]
    public string CardBorderRadius { get; set; } = "5px";

    /// <summary>
    /// Rounding the picture appearnce.
    /// </summary>
    [Parameter]
    public string PictureBorderRadius { get; set; } = "50px";

    /// <summary>
    /// Picture size within component.
    /// </summary>
    [Parameter]
    public string PictureSize { get; set; } = "50%";

    /// <summary>
    /// Space between component and picture;
    /// </summary>
    [Parameter]
    public string Padding { get; set; } = "0px";

    /// <summary>
    /// Width of component.
    /// </summary>
    [Parameter]
    public string Width { get; set; } = "100%";

    /// <summary>
    /// Text that appears upon hovering on picture.
    /// </summary>
    [Parameter]
    public string Title { get; set; } = "חזרה למסך הבית";

    /// <summary>
    /// Path to the picture of ComingSoon component.
    /// </summary>
    [Parameter]
    public string PicPath { get; set; } = "Images/ComingSoon2.jfif";
}

<RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Center" AlignItems="AlignItems.Center"
             Style="@($"background-color:{BackgroundColor}; border-radius:{CardBorderRadius}; padding: {Padding}; width:{Width}")">
    <a href="@CipherNavLinks.Home.Href" title="@Title">
        <div class="image-container">
            <CipherLogo LogoPath="@PicPath" Height="@PictureSize" Width="@PictureSize" BorderRadius="@PictureBorderRadius"></CipherLogo>
            <div class="overlay">@Title</div>
        </div>
    </a>
</RadzenStack>

<style>
    .image-container {
        position: relative;
        display: flex;
        justify-content: center;
    }

        .image-container img {
            filter: none;
        }

        .image-container:hover img {
            filter: blur(5px); /* Adjust the blur amount as needed */
            transition: filter 0.3s ease;
        }

    .overlay {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: rgba(255, 255, 255, 0.8);
        padding: 50px;
        border-radius: 5px;
        font-weight: bold;
        font-size: large;
        display: none;
        color: var(--rz-primary-darker)
    }

    .image-container:hover .overlay {
        display: block;
    }
</style>

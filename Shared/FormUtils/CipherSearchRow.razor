@using Data
@using CipherData
@using CipherData.Models
@using CipherWeb.Data
@using CipherWeb.Shared.Components.Buttons

@using Radzen


@code {
    [Parameter]
    public string? LabelText { get; set; }

    [Parameter]
    public string? PlaceHolderText { get; set; }

    [Parameter]
    public bool Disabled { get; set; }

    public static bool FoundData;

    protected override async Task OnInitializedAsync()
    {
        LabelText = (LabelText is null)? "חיפוש תעודה" : LabelText;
        PlaceHolderText = (PlaceHolderText is null) ? "מספר תעודה" : PlaceHolderText;
    }
}

<CipherFormRow Label="@LabelText" Icon="@Icons.Search">
    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.2rem">
        <RadzenTextBox Placeholder=@PlaceHolderText Style=@Constants.textStyle />
        <CipherSearchButton />
    </RadzenStack>
</CipherFormRow>
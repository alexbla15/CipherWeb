@using Data
@using Radzen
@using CipherData.Models
@using CipherWeb.Shared.Components


<CipherFormRow Icon="@Icon" Label="@LabelText">
    <RadzenAutoComplete Placeholder="@LabelText" Style="@Constants.textStyle" @bind-Value=@PackId />
</CipherFormRow>

@code {
    [Parameter]
    public string? PackId { get; set; }

    [Parameter]
    public string? LabelText { get; set; }

    [Parameter]
    public string? Icon { get; set; }


    protected override async Task OnInitializedAsync()
    {
        if (LabelText is null)
        {
            LabelText = "מספר תעודה";
        }
        if (Icon is null)
        {
            Icon = "tag";
        }
    }
}